<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fill Project Details - SpoRIC</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      .container {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">SpoRIC</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="faculty-dashboard.html">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="faculty-notifications.html"
                >Notifications</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="faculty-profile.html">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="faculty-login.html">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h2 class="mb-4">Fill Project Details</h2>

      <form>
        <!-- SpoRIC ID -->
        <div class="mb-3">
          <label for="sporicId" class="form-label">SpoRIC ID</label>
          <input
            type="text"
            class="form-control"
            id="sporicId"
            value="SPORIC-2024-005"
            readonly
          />
        </div>

        <!-- Company Details -->
        <h5>Company Details</h5>
        <div class="mb-3">
          <label for="companyName" class="form-label">Company Name</label>
          <input
            type="text"
            class="form-control"
            id="companyAddress"
            placeholder="Enter company name"
          />
        </div>
        <div class="mb-3">
          <label for="companyAddress" class="form-label">Company Address</label>
          <input
            type="text"
            class="form-control"
            id="companyAddress"
            placeholder="Enter company address"
          />
        </div>

        <!-- Contact Person Details -->
        <h5>Contact Person Details</h5>
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="contactPersonName" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="contactPersonName"
              placeholder="Enter contact person name"
            />
          </div>
          <div class="col-md-4 mb-3">
            <label for="contactPersonDesignation" class="form-label"
              >Designation</label
            >
            <input
              type="text"
              class="form-control"
              id="contactPersonDesignation"
              placeholder="Enter designation"
            />
          </div>
          <div class="col-md-4 mb-3">
            <label for="contactPersonEmail" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="contactPersonEmail"
              placeholder="Enter email"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="contactPersonMobile" class="form-label">Mobile</label>
          <input
            type="text"
            class="form-control"
            id="contactPersonMobile"
            placeholder="Enter mobile number"
          />
        </div>

        <!-- Payment Details -->
        <h5>Payment Details</h5>

        <div class="mb-3">
          <label class="form-label">Payment Option</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="paymentOption"
              id="fullPayment"
              value="full"
            />
            <label class="form-check-label" for="fullPayment"
              >Full Payment</label
            >
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="paymentOption"
              id="partialPayment"
              value="partial"
            />
            <label class="form-check-label" for="partialPayment"
              >Partial Payment</label
            >
          </div>
        </div>

        <!-- Full Payment Fields -->
        <div id="fullPaymentFields" class="d-none">
          <div class="mb-3">
            <label for="fullPaymentAmount" class="form-label"
              >Full Payment Amount</label
            >
            <input
              type="text"
              class="form-control"
              id="fullPaymentAmount"
              placeholder="Enter full payment amount"
            />
          </div>
          <!--GST-->
          <div class="mb-3">
            <label for="gstAmount" class="form-label">GST Amount</label>
            <input
              type="text"
              class="form-control"
              id="gstAmount"
              placeholder="Enter GST amount"
            />
          </div>
          <div class="mb-3">
            <label for="gstAmount" class="form-label">Total Amount</label>
            <input
              type="text"
              class="form-control"
              id="gstAmount"
              placeholder=""
              readonly
            />
          </div>
          <div class="mb-3">
            <label for="paymentDate" class="form-label">Payment Date</label>
            <input type="date" class="form-control" id="paymentDate" />
          </div>
          <div class="mb-3">
            <label for="paymentRefNo" class="form-label"
              >Payment Reference Number</label
            >
            <input
              type="text"
              class="form-control"
              id="paymentRefNo"
              placeholder="Enter payment reference number"
            />
          </div>
        </div>

        <!-- Partial Payment Fields -->
        <div id="partialPaymentFields" class="d-none">
          <div class="mb-3">
            <label for="paymentId" class="form-label">Total Amount</label>
            <input
              type="text"
              class="form-control"
              id="paymentId"
              placeholder="Enter total payment amount"
            />
          </div>
          <div class="mb-3">
            <label for="noOfPhases" class="form-label">Number of Phases</label>
            <input
              type="text"
              class="form-control"
              id="noOfPhases"
              placeholder="Enter number of phases"
            />
          </div>
          <div id="phaseDetailsContainer"></div>
          <button
            type="button"
            class="btn btn-secondary mb-3"
            id="addPhaseButton"
          >
            Add Phase
          </button>
        </div>

        <!-- GST Details -->
        <h5>GST Details</h5>
        <div class="mb-3">
          <label for="companyGstNo" class="form-label"
            >Company GST Number</label
          >
          <input
            type="text"
            class="form-control"
            id="companyGstNo"
            placeholder="Enter company GST number"
          />
        </div>
        <div class="mb-3">
          <label for="gstCertificate" class="form-label"
            >Upload GST Certificate</label
          >
          <input type="file" class="form-control" id="gstCertificate" />
        </div>

        <!-- Project Duration -->
        <h5>Project Duration</h5>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="projectStartDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="projectStartDate" />
          </div>
          <div class="col-md-6 mb-3">
            <label for="projectEndDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="projectEndDate" />
          </div>
        </div>

        <!-- Submit Button with Additional Space -->
        <button type="submit" class="btn btn-primary mb-5">
          Submit Details
        </button>
      </form>
    </div>

    <script>
      // Show/hide payment fields based on selected payment option
      document
        .querySelectorAll('input[name="paymentOption"]')
        .forEach((elem) => {
          elem.addEventListener("change", function () {
            if (this.value === "full") {
              document
                .getElementById("fullPaymentFields")
                .classList.remove("d-none");
              document
                .getElementById("partialPaymentFields")
                .classList.add("d-none");
            } else if (this.value === "partial") {
              document
                .getElementById("fullPaymentFields")
                .classList.add("d-none");
              document
                .getElementById("partialPaymentFields")
                .classList.remove("d-none");
            }
          });
        });

      // Add phase details dynamically for partial payment
      document
        .getElementById("addPhaseButton")
        .addEventListener("click", function () {
          const phaseDetailsContainer = document.getElementById(
            "phaseDetailsContainer"
          );
          const phaseNumber = phaseDetailsContainer.children.length + 1;

          const phaseDetails = document.createElement("div");
          phaseDetails.classList.add("mb-3");

          phaseDetails.innerHTML = `
                <h6>Phase ${phaseNumber}</h6>
                
                <div class="mb-3">
                    <label for="phase${phaseNumber}Amount" class="form-label">Phase ${phaseNumber} Amount</label>
                    <input type="text" class="form-control" id="phase${phaseNumber}Amount" placeholder="Enter phase ${phaseNumber} amount">
                </div>
                <div class="mb-3">
            <label for="payment${phaseNumber}Date" class="form-label">Phase ${phaseNumber} Payment Date</label>
            <input type="date" class="form-control" id="paymentDate" />
          </div>
                <div class="mb-3">
                    <label for="phase${phaseNumber}PaymentRefNo" class="form-label">Phase ${phaseNumber} Payment Reference Number</label>
                    <input type="text" class="form-control" id="phase${phaseNumber}PaymentRefNo" placeholder="Enter phase ${phaseNumber} payment reference number">
                </div>
            `;

          phaseDetailsContainer.appendChild(phaseDetails);
        });
    </script>
  </body>
</html>
