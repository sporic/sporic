{{define "title"}}Faculty Home{{ end }}

{{define "main"}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">SpoRIC</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link active" href="/home">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/faculty-notifications">Notifications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/faculty-profile">Profile</a>
        </li>
        <li class="nav-item">
          <form action="/logout" method="post">
            <input class="nav-link" type="submit" value="Logout" />
          </form>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h2 class="mb-4">Welcome, {{.User.Username}}</h2>

  <!-- Project Summary -->
  <div class="row mb-4">
    <h4>Actions</h4>
    <div class="col-md-6">
      <a class="btn btn-warning" href="/new_application">New Application</a>
    </div>
  </div>

  <!-- Pending Approval Projects -->
  <div class="row mt-4">
    <div class="col-md-12">
      <h4>Pending Approval Projects</h4>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>SpoRIC ID</th>
              <th>Company</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{
            range.Applications
            }}
            {{if eq .Status 0}}
            <!-- Assuming Status 0 is Pending Approval -->
            <tr>
              <td>{{.SporicRefNo}}</td>
              <td>{{.CompanyName}}</td>
              <td>Pending Approval</td>
              <td>
                <a class="btn btn-sm btn-primary" href="/faculty/view_application/{{.SporicRefNo}}">View</a>
              </td>
            </tr>
            {{
            end
            }}
            {{
            end
            }}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Active Projects -->
  <div class="row mt-4">
    <div class="col-md-12">
      <h4>Active Projects</h4>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>SpoRIC ID</th>
              <th>Company</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{
            range.Applications
            }}
            {{if eq .Status 1}}
            <!-- Assuming Status 1 is Ongoing -->
            <tr>
              <td>{{.SporicRefNo}}</td>
              <td>{{.CompanyName}}</td>
              <td>Ongoing</td>
              <td>
                <a class="btn btn-sm btn-primary" href="/faculty/view_application/{{.SporicRefNo}}">View</a>
              </td>
            </tr>
            {{
            end
            }}
            {{
            end
            }}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Completed Projects -->
    <div class="col-md-12 mt-4">
      <h4>Completed Projects</h4>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>SpoRIC ID</th>
              <th>Company</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{
            range.Applications
            }}
            {{if or (eq .Status 2) (eq .Status 3) }}
            <!-- Assuming Status 2 is Completed -->
            <tr>
              <td>{{.SporicRefNo}}</td>
              <td>{{.CompanyName}}</td>
              <td>Completed</td>
              <td>
                <a class="btn btn-sm btn-primary" href="/faculty/view_application/{{.SporicRefNo}}">View</a>
              </td>
            </tr>
            {{
            end
            }}
            {{
            end
            }}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{ end }}