<div class="container mt-4">
  <h2 class="mb-4">View Record - {{.Application.SporicRefNo}}</h2>

  <div class="row mb-4">
    <!-- Project Details Section -->
    <div class="col-md-6">
      <h4>Project Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Ref No.</th>
            <td>{{.Application.SporicRefNo}}</td>
          </tr>
          <tr>
            <th>Faculty Name</th>
            <td>Dr. John Doe</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>Professor</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>john.doe@university.edu</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>+1234567890</td>
          </tr>
          <tr>
            <th>School</th>
            <td>School of Engineering</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Company Details Section -->
    <div class="col-md-6">
      <h4>Company Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Company Name</th>
            <td>{{.Application.CompanyName}}</td>
          </tr>
          <tr>
            <th>Address</th>
            <td>{{.Application.CompanyAddress}}</td>
          </tr>
          <tr>
            <th>Contact Person</th>
            <td>{{.Application.ContactPersonName}}</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>{{.Application.ContactPersonDesignation}}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{.Application.ContactPersonEmail}}</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>{{.Application.ContactPersonEmail}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Actions Section -->
  <div class="row">
    <div class="col-md-12 text-end">
      <a href="admin-dashboard.html" class="btn btn-secondary"
        >Back to Dashboard</a
      >
    </div>
  </div>
</div>
{{ end }}
