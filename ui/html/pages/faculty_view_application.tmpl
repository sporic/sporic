{{define "title"}}Faculty Home{{ end }}

{{define "main"}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">SpoRIC</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/faculty_home">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Projects</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="admin-login.html">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h2 class="mb-4">View Record - {{.Application.SporicRefNo}}</h2>

  <div class="row mb-4">
    <!-- Project Details Section -->
    <div class="col-md-6">
      <h4>Project Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Ref No.</th>
            <td>{{.Application.SporicRefNo}}</td>
          </tr>
          <tr>
            <th>Faculty Name</th>
            <td>{{.User.Username}}</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>{{.User.Designation}}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{.User.Email}}</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>{{.User.MobileNumber}}</td>
          </tr>
          <tr>
            <th>School</th>
            <td>{{.User.School}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Company Details Section -->
    <div class="col-md-6">
      <h4>Company Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Company Name</th>
            <td>{{.Application.CompanyName}}</td>
          </tr>
          <tr>
            <th>Address</th>
            <td>{{.Application.CompanyAddress}}</td>
          </tr>
          <tr>
            <th>Contact Person</th>
            <td>{{.Application.ContactPersonName}}</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>{{.Application.ContactPersonDesignation}}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{.Application.ContactPersonEmail}}</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>{{.Application.ContactPersonMobile}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Payments -->
  <h4>Payments</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Amount</th>
        <th>GST No.</th>
        <th>PAN No.</th>
        <th>GST Certificate</th>
        <th>Invoice</th>
        <th>Transaction ID</th>
        <th>Payment Proof</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{ range.Application.Payments }}
      {{ if eq .Payment_status 2 }}
      <tr>
        <td>{{.Payment_amt}}</td>
        <td>{{.Gst_number}}</td>
        <td>{{.Pan_number}}</td>
        <td><a href="#" target="_blank">View</a></td>
        <td><a href="#" target="_blank">View</a></td>
        <td>1231234324</td>
        <td><a href="#" target="_blank">View</a></td>
        <td>
          <span class="badge bg-success">Approve</span>
        </td>
      </tr>
      {{ end }}
      {{ if eq .Payment_status 1 }}
      <tr>
        <td>{{.Payment_amt}}</td>
        <td>{{.Gst_number}}</td>
        <td>{{.Pan_number}}</td>
        <td><a href="#" target="_blank">View</a></td>
        <td><a href="#" target="_blank">View</a></td>
        <td>
          <input type="text" class="form-control" placeholder="Transaction ID" />
        </td>
        <td>
          <input type="file" class="form-control" placeholder="Payment Proof" />
        </td>
        <td>
          <button class="btn btn-primary">Confirm</button>
        </td>
      </tr>
      {{ end }}
      {{ if eq .Payment_status 0 }}
      <tr>
        <form action="/faculty_view_application" method="post">
          <input type="hidden" name="action" value="confirm_payment" />
          <input type="hidden" name="payment_id" value="{{.Payment_id}}" />
          <td>{{.Payment_amt}}</td>
          <td>{{.Gst_number}}</td>
          <td>{{.Pan_number}}</td>
          <td><a href="#" target="_blank">View</a></td>
          <td>Invoice not generated yet</td>
          <td></td>
          <td></td>
          <td>Invoice Requested</td>
        </form>
      </tr>
      {{ end }}
      {{ end }}
    </tbody>
  </table>

  <!-- Expenditures -->
  <h4>Expenditures</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cost</th>
        <th>Date</th>
        <th>Proof Document</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{ range.Application.Expenditures }}
      <tr>
        <td>{{.Expenditure_name}}</td>
        <td>{{.Expenditure_amt}}</td>
        <td>{{.Expenditure_date.Format "Monday, 02-Jan-06"}}</td>
        <td><a href="#" target="_blank">View</a></td>
        <td>
          {{ if eq .Expenditure_status 0 }}<span class="badge bg-warning">Pending Approval</span>{{ end }}
          {{ if eq .Expenditure_status 1 }}<span class="badge bg-success">Approved</span>{{ end }}
          {{ if eq .Expenditure_status 2 }}<span class="badge bg-danger">Rejected</span>{{ end }}
        </td>
      </tr>
      {{ end }}
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-6">
      <h4>Request Invoice</h4>
      <form method="post">
        <input type="hidden" name="action" value="request_invoice" />
        <input type="hidden" name="sporic_ref_no" value="{{.Application.SporicRefNo}}" />
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="amount" class="form-label">Amount</label>
              <input type="text" class="form-control" id="amount" name="payment_amt" required />
            </div>
            <div class="mb-3">
              <label for="gst" class="form-label">GST No.</label>
              <input type="text" class="form-control" id="gst" name="gst_number" required />
            </div>
            <div class="mb-3">
              <label for="pan" class="form-label">PAN No.</label>
              <input type="text" class="form-control" id="pan" name="pan_number" required />
            </div>
            <div class="mb-3">
              <label for="gst_certificate" class="form-label">GST Certificate</label>
              <input type="file" class="form-control" id="gst_certificate" name="gst_certificate" required />
            </div>
            <button type="submit" class="btn btn-primary">
              Request Invoice
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- form to add expenditure (name, cost, proof document) -->
    <div class="col-md-6">
      <h4>Add Expenditure</h4>
      <form method="post">
        <input type="hidden" name="action" value="add_expenditure" />
        <input type="hidden" name="sporic_ref_no" value="{{.Application.SporicRefNo}}" />
        <div class="mb-3">
          <label for="expenditureName" class="form-label">Name</label>
          <input type="text" class="form-control" id="expenditureName" name="expenditure_name" required />
        </div>
        <div class="mb-3">
          <label for="expenditureCost" class="form-label">Cost</label>
          <input type="text" class="form-control" id="expenditureCost" name="expenditure_amt" required />
        </div>
        <div class="mb-3">
          <label for="expenditureProof" class="form-label">Proof Document</label>
          <input type="file" class="form-control" id="expenditureProof" name="expenditure_proof" required />
        </div>
        <button type="submit" class="btn btn-primary">Add Expenditure</button>
      </form>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h4>Complete Project</h4>
      <form method="post">
        <input type="hidden" name="action" value="complete_project" />
        <input type="hidden" name="sporic_ref_no" value="{{.Application.SporicRefNo}}" />
        <div class="mb-3">
          <label for="collegeResources" class="form-label">College Resources Used</label>
          <select class="form-select" id="collegeResources" name="college_resources" required>
            <option value="1">Yes</option>
            <option value="0">No</option>
          </select>
          <div class="mb-3">
            <label for="comments" class="form-label">Comments</label>
            <textarea class="form-control" id="comments" name="comments" required></textarea>
          </div>
          <div class="mb-3">
            <label for="projectClosureReport" class="form-label">Project Closure Report</label>
            <input type="file" class="form-control" id="projectClosureReport" name="project_closure_report" required />
          </div>
          <button type="submit" class="btn btn-primary">Complete Project</button>
      </form>
    </div>
  </div>

</div>
{{ end }}