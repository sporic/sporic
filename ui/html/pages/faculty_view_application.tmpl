<div class="container mt-4">
  <h2 class="mb-4">View Record - {{.Application.SporicRefNo}}</h2>

  <div class="row mb-4">
    <!-- Project Details Section -->
    <div class="col-md-6">
      <h4>Project Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Ref No.</th>
            <td>{{.Application.SporicRefNo}}</td>
          </tr>
          <tr>
            <th>Faculty Name</th>
            <td>{{.User.Username}}</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>{{.User.Designation}}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{.User.Email}}</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>{{.User.MobileNumber}}</td>
          </tr>
          <tr>
            <th>School</th>
            <td>{{.User.School}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Company Details Section -->
    <div class="col-md-6">
      <h4>Company Details</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>Company Name</th>
            <td>{{.Application.CompanyName}}</td>
          </tr>
          <tr>
            <th>Address</th>
            <td>{{.Application.CompanyAddress}}</td>
          </tr>
          <tr>
            <th>Contact Person</th>
            <td>{{.Application.ContactPersonName}}</td>
          </tr>
          <tr>
            <th>Designation</th>
            <td>{{.Application.ContactPersonDesignation}}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{.Application.ContactPersonEmail}}</td>
          </tr>
          <tr>
            <th>Mobile No.</th>
            <td>{{.Application.ContactPersonMobile}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Payments -->
  <!-- Confirmed Payments -->

  <h4>Payments</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Amount</th>
        <th>GST No.</th>
        <th>PAN No.</th>
        <th>GST Certificate</th>
        <th>Invoice</th>
        <th>Transaction ID</th>
        <th>Payment Proof</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{
      range.Application.Payments
      }}
      {{ if eq .Payment_status 2 }}
      <tr>
        <td>{{.Payment_amt}}</td>
        <td>{{.Gst_number}}</td>
        <td>{{.Pan_number}}</td>
        <td><a href="#" target="_blank">View</a></td>
        <td><a href="#" target="_blank">View</a></td>
        <td>1231234324</td>
        <td><a href="#" target="_blank">View</a></td>
        <td>
          <span class="badge bg-success">Approve</span>
        </td>
      </tr>
      {{
      end
      }}
      {{ if eq .Payment_status 1 }}
      <tr>
        <td>{{.Payment_amt}}</td>
        <td>{{.Gst_number}}</td>
        <td>{{.Pan_number}}</td>
        <td><a href="#" target="_blank">View</a></td>
        <td><a href="#" target="_blank">View</a></td>
        <td>
          <input type="text" class="form-control" placeholder="Transaction ID" />
        </td>
        <td>
          <input type="file" class="form-control" placeholder="Payment Proof" />
        </td>
        <td>
          <button class="btn btn-primary">Confirm</button>
        </td>
      </tr>
      {{
      end
      }}
      {{
      end
      }}
    </tbody>
  </table>

  <!-- Payments with invoice generated but not confirmed-->
  <h4>Payments Pending Confirmation</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Amount</th>
        <th>GST No.</th>
        <th>PAN No.</th>
        <th>GST Certificate</th>
      </tr>
    </thead>
    <tbody>
      {{
      range.Application.Payments
      }}
      {{ if eq .Payment_status 0 }}
      <tr>
        <form action="/faculty_view_application" method="post">
          <input type="hidden" name="action" value="confirm_payment" />
          <input type="hidden" name="payment_id" value="{{.Payment_id}}" />
          <td>{{.Payment_amt}}</td>
          <td>{{.Gst_number}}</td>
          <td>{{.Pan_number}}</td>
          <td><a href="#" target="_blank">View</a></td>
        </form>
      </tr>
      {{
      end
      }}
      {{
      end
      }}

      {{
      range.Application.Payments
      }}
      {{
      end
      }}
    </tbody>
  </table>

  <!-- Form to request invoice: need amount, gst, pan, gst certificate-->
  <h4>Request Invoice</h4>
  <form method="post">
    <input type="hidden" name="action" value="request_invoice" />
    <input type="hidden" name="sporic_ref_no" value="{{.Application.SporicRefNo}}" />
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label for="amount" class="form-label">Amount</label>
          <input type="text" class="form-control" id="amount" name="payment_amt" required />
        </div>
        <div class="mb-3">
          <label for="gst" class="form-label">GST No.</label>
          <input type="text" class="form-control" id="gst" name="gst_number" required />
        </div>
        <div class="mb-3">
          <label for="pan" class="form-label">PAN No.</label>
          <input type="text" class="form-control" id="pan" name="pan_number" required />
        </div>
        <div class="mb-3">
          <label for="gst_certificate" class="form-label">GST Certificate</label>
          <input type="file" class="form-control" id="gst_certificate" name="gst_certificate" required />
        </div>
        <button type="submit" class="btn btn-primary">Request Invoice</button>
      </div>
    </div>
</div>
{{ end }}