<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - SpoRIC</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">SpoRIC</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="admin-notifications.html"
                >Notificatons</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="admin-profile.html">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="admin-login.html">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h2 class="mb-4">Admin Dashboard</h2>

      <!-- Filters Section -->
      <div class="row mb-3">
        <h4>Filters</h4>
        <div class="col-md-4">
          <label for="filterRecordNo" class="form-label"
            >Filter by Record No.</label
          >
          <input
            type="text"
            class="form-control"
            id="filterRecordNo"
            placeholder="Enter Record No."
          />
        </div>
        <div class="col-md-4">
          <label for="filterStatus" class="form-label">Filter by Status</label>
          <select class="form-select" id="filterStatus">
            <option value="">All</option>
            <option value="pending">Pending Approval</option>
            <option value="approved">Approved</option>
            <option value="completed">Completed</option>
          </select>
        </div>
        <div class="col-md-4 align-self-end">
          <button class="btn btn-primary mt-2" onclick="applyFilters()">
            Apply Filters
          </button>
        </div>
      </div>

      <!-- Actions Section -->
      <div class="row mb-4">
        <h4>Actions</h4>
        <div class="col-md-6">
          <a href="generate-record.html" class="btn btn-success"
            >Generate New Record</a
          >
        </div>
        <div class="col-md-6 text-end">
          <button class="btn btn-warning" onclick="downloadAllRecords()">
            Download All Records as Excel
          </button>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h4>Project Records</h4>
          <table class="table table-striped table-hover" id="recordsTable">
            <thead class="table-dark">
              <tr>
                <th>Record No.</th>
                <th>Faculty Name</th>
                <th>Designation</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>SPORIC-001</td>
                <td>Dr. John Doe</td>
                <td>Professor</td>
                <td>
                  <span class="badge bg-warning text-dark"
                    >Pending Approval</span
                  >
                </td>
                <td>
                  <a
                    href="view-record.html?record=SPORIC-001"
                    class="btn btn-primary btn-sm"
                    >View</a
                  >
                </td>
              </tr>
              <!-- Repeat similar rows for other records -->
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script>
      function applyFilters() {
        const filterRecordNo = document
          .getElementById("filterRecordNo")
          .value.toLowerCase();
        const filterStatus = document
          .getElementById("filterStatus")
          .value.toLowerCase();
        const rows = document.querySelectorAll("#recordsTable tbody tr");

        rows.forEach((row) => {
          const recordNo = row.cells[0].innerText.toLowerCase();
          const status = row.cells[3].innerText.toLowerCase();

          const matchesRecordNo = recordNo.includes(filterRecordNo);
          const matchesStatus =
            filterStatus === "" || status.includes(filterStatus);

          if (matchesRecordNo && matchesStatus) {
            row.style.display = "";
          } else {
            row.style.display = "none";
          }
        });
      }

      function downloadAllRecords() {
        // Placeholder function for downloading all records as an Excel file
        alert("Download all records as Excel feature is not yet implemented.");
        // You would typically trigger a server-side action to generate and download the Excel file.
      }
    </script>
  </body>
</html>
